mixin chance(content, params)
  section#chance.chance
    .chance__content
      .chance__block-top 
        .chance__block-top-wrapper
          h2.chance__title!= content.blocks[0].title
          p.chance__description!= content.blocks[0].desc
          .chance__img 
            img(src!=content.blocks[0].img, alt="")
          +button(content.blocks[0].button)
      .chance__block-center 
        .chance__block-center-wrapper
          h2.chance__title!= content.blocks[1].title
          p.chance__description!= content.blocks[1].desc
          .chance__img 
            img(src!=content.blocks[1].img, alt="")
          +button(content.blocks[1].button)
      .chance__block-bottom
        .chance__block-bottom-wrapper
          h2.chance__title!= content.blocks[2].title
          p.chance__description!= content.blocks[2].desc
          +button(content.blocks[2].button)
          .chance__img 
            img(src!=content.blocks[2].img, alt="")
    .chance__decor-top 
      img(src!=content.light, alt="")
    .chance__decor-bottom
      img(src!=content.light, alt="")